# Reranker Toggle Configuration
# Source this file to enable/disable the PyTorch reranker

# Enable PyTorch reranker
export RERANKER_ENABLED=true
export RERANKER_MODEL="cross-encoder/ms-marco-MiniLM-L-6-v2"
export RERANK_INPUT_TOPK=50
export RERANK_KEEP=12
export RERANK_BATCH=8
export TORCH_DEVICE="auto"  # auto, cpu, mps, cuda

# Enable reranking in the pipeline
export RERANK_ENABLE=1

# Cache settings
export RERANKER_CACHE_ENABLED=true
export RERANKER_CACHE_DIR="cache"

# Evaluation settings
export EVAL_DISABLE_CACHE=1  # Disable cache for evaluations
