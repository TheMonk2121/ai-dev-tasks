# AWS Bedrock Configuration Template
# Copy this file to aws_credentials.env and fill in your values
# DO NOT commit the actual credentials file to git

# Option 1: AWS Access Keys (for development)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_DEFAULT_REGION=us-east-1

# Option 2: AWS Profile (recommended)
# AWS_PROFILE=your_profile_name

# Option 3: AWS Session Token (for temporary credentials)
# AWS_SESSION_TOKEN=your_session_token_here

# Bedrock Configuration
AWS_DEFAULT_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# Cost Monitoring Configuration
BEDROCK_COST_TRACKING=true
BEDROCK_BUDGET_ALERT_THRESHOLD=50.00
BEDROCK_USAGE_LOG_FILE=metrics/bedrock_usage.json
