[sqlfluff]
dialect = postgres
templater = jinja
exclude_rules = L009
verbose = 0

[rules]
max_line_length = 120

[sqlfluff:rules:L016]
ignore_comment_lines = true

[sqlfluff:indentation]
indented_joins = true

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper

[tool:paths]
ignore = [
  "600_archives/**",
  "docs/legacy/**"
]
